{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeAll",
    ":dependencyDashboard"
  ],
  "schedule": [
    "every weekend"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "assignees": [
    "ylkhayat"
  ],
  "platformAutomerge": true,
  "prConcurrentLimit": 10,
  "rebaseWhen": "conflicted",
  "configMigration": true
}